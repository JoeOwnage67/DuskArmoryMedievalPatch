<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Dusk Hooded Helm -->
    <ThingDef ParentName="DF_Helm" Name="DF_Helm_Hood">
        <defName>DF_Dusk_Helm_Hooded</defName>
        <label>Dusk Hooded Helm</label>
        <description>The Dusk Helm is extremely sturdy and lightweight, surviving a Titan's fists without a scratch.</description>
        <graphicData>
            <texPath>Things/Apparel/Helmet/Hooded/Dusk_Helmet_UI</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.5</drawSize>
        </graphicData>
        <costStuffCount>25</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <costList>
          <Steel>80</Steel>
        </costList>
      
        <statBases>
            <WorkToMake>21000</WorkToMake>
            <MaxHitPoints>260</MaxHitPoints>
            <Mass>2.5</Mass>
            <Flammability>0.4</Flammability>
          
             <ArmorRating_Sharp>1.06</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
            <ArmorRating_Heat>0.54</ArmorRating_Heat>  
            <Insulation_Cold>4</Insulation_Cold>
            <Insulation_Heat>2</Insulation_Heat>
            <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.14</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat> 
            <EquipDelay>10</EquipDelay>
        </statBases>
      
      
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <layers>
                <li>Overhead</li>
            </layers>
            <wornGraphicPath>Things/Apparel/Helmet/Hooded/Dusk_Helmet</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <tags Inherit = "False">
                <li>RNApparel_ReactiveHelmet_VOIDCloaked</li>                
            </tags>
        </apparel>
      
      
        <equippedStatOffsets>
            <ToxicSensitivity>-100</ToxicSensitivity>
            <ShootingAccuracyPawn>-3</ShootingAccuracyPawn>
            <PainShockThreshold>0.10</PainShockThreshold>
            <SocialImpact>0.15</SocialImpact>    
        </equippedStatOffsets>
    </ThingDef>

